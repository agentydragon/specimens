    deps = [":gnome_terminal_profile_switcher"],
)

py_wheel(
    name = "gnome_terminal_profile_switcher_wheel",
    distribution = "gnome_terminal_profile_switcher",
    entry_points = {
        "console_scripts": ["switch-gnome-terminal-profile = gnome_terminal_profile_switcher:main"],
    },
    python_requires = ">=3.11",
    requires = [
        "absl-py",
        "dbus-python",
        "pycairo",
        "pygobject",
    ],
    tags = ["manual"],
    version = "0.1.0",
    deps = [":gnome_terminal_profile_switcher_pkg"],
