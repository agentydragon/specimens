load("@rules_python//python:defs.bzl", "py_binary", "py_library")
load("@rules_python//python:packaging.bzl", "py_package", "py_wheel")
load("//tools/lint:linters.bzl", "ruff_test")

py_library(
    name = "gnome_terminal_profile_switcher",
    srcs = ["__init__.py"],
    imports = [".."],
    # Requires system libraries (libgirepository1.0-dev, libdbus-1-dev) - manual only
    tags = ["manual"],
    visibility = ["//visibility:public"],
    deps = [
        "@pypi//absl_py",
        "@pypi//dbus_python",
        "@pypi//pycairo",
        "@pypi//pygobject",
    ],
