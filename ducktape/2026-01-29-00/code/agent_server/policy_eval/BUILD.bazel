"""Policy evaluation package - container-based policy execution."""

load("@rules_python//python:defs.bzl", "py_binary", "py_library")

py_binary(
    name = "shim",
    srcs = ["shim.py"],
    main = "shim.py",
    visibility = ["//visibility:public"],
    deps = [":constants"],
)

py_library(
    name = "constants",
    srcs = ["constants.py"],
    visibility = ["//:__subpackages__"],
)

py_library(
    name = "container",
    srcs = ["container.py"],
    visibility = ["//:__subpackages__"],
    deps = [
        ":runner",
        "//agent_server/policies:policy_types",
        "//agent_server/runtime:images",
        "@pypi//aiodocker",
    ],
)

py_library(
    name = "runner",
    srcs = ["runner.py"],
    visibility = ["//:__subpackages__"],
    deps = [
        ":constants",
        "//agent_server/policies:policy_types",
        "//agent_server/runtime:images",
        "@pypi//aiodocker",
    ],
)
